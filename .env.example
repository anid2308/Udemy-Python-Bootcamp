# Environment Variables Template
# Copy this to .env and fill in your actual values
# IMPORTANT: .env is in .gitignore - never commit it!

# Streamlit Configuration
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501
STREAMLIT_LOGGER_LEVEL=info

# API Keys (Replace with your actual keys)
# Do NOT commit .env file with real keys!
API_KEY=your_api_key_here
API_SECRET=your_secret_here

# Database Configuration
# Example: postgresql://user:password@localhost:5432/dbname
DATABASE_URL=your_database_url_here
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Cloud Service Credentials
# AWS
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Google Cloud
GCP_PROJECT_ID=your_gcp_project_id
GCP_CREDENTIALS=path/to/service-account-key.json

# HuggingFace
HUGGINGFACE_TOKEN=your_huggingface_token

# OpenAI / Anthropic (if used)
OPENAI_API_KEY=your_openai_key
ANTHROPIC_API_KEY=your_anthropic_key

# OAuth Configuration (if needed)
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_REDIRECT_URI=http://localhost:8501

# Third-party Service Keys
GITHUB_TOKEN=your_github_token
SLACK_WEBHOOK_URL=your_slack_webhook_url

# Email Configuration (if needed)
SMTP_SERVER=your_smtp_server
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# Feature Flags
DEBUG_MODE=false
ENABLE_LOGGING=true
ENABLE_CACHE=true

# Custom Application Settings
APP_NAME=ML Projects Portfolio
APP_ENV=development
LOG_LEVEL=INFO
